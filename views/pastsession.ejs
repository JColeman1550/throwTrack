<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThrowTrack</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">

</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/tracker" class="btn btn-default btn-sm">Back to Tracker</a>
        <a href="/strikezonedata" class="btn btn-default btn-sm">Zone Distribution</a>
    </div>

<!--------------------------------------------------PAST SESSIONS----------------------------------------------->
    <div class="row">
        <h1>Past Sessions</h1>

        <!---RESPONSIVE TABLE -->
        <div class="table-responsive small-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Session Name</th>
                        <th>Pitch Count</th>
                        <th>Ball Count</th>
                        <th>Strike Count</th>  
                    </tr>
                </thead>
                <tbody>
                    
        <!---DISPLAYS SESSION DATA--->                   
                    <% sessions.forEach(session => { %>
                        <tr>
                            <td><%= session.sessionName %></td>
                            <td><%= session.pitchCount %></td>
                            <td><%= session.ballCount %></td>
                            <td><%= session.strikeCount %></td>
                            <td>
                                <i class="fa fa-trash-o delete-session" 
                                data-id="<%= session._id %>" 
                                data-sessionName="<%= session.sessionName %>"
                                data-pitchCount="<%= session.pitchCount %>"
                                data-ballCount="<%= session.ballCount %>"
                                data-strikeCount="<%= session.strikeCount %>"
                                aria-hidden="true" 
                                style="cursor: pointer; color: red;"></i>
                               
                                <i class="fa fa-edit edit-session"
                                data-id="<%= session._id %>" 
                                data-sessionName="<%= session.sessionName %>"
                                data-pitchCount="<%= session.pitchCount %>"
                                data-ballCount="<%= session.ballCount %>"
                                data-strikeCount="<%= session.strikeCount %>"
                                aria-hidden="true" 
                                style="cursor: pointer; color: blue;"></i>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div id="editModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <h2>Edit Session</h2>
              <form id="editForm">
                <input type="hidden" id="editSessionId">
                <label for="editSessionName">Session Name:</label>
                <input type="text" id="editSessionName" name="sessionName"><br>
                <label for="editPitchCount">Pitch Count:</label>
                <input type="number" id="editPitchCount" name="pitchCount"><br>
                <label for="editBallCount">Ball Count:</label>
                <input type="number" id="editBallCount" name="ballCount"><br>
                <label for="editStrikeCount">Strike Count:</label>
                <input type="number" id="editStrikeCount" name="strikeCount"><br>
                <button type="submit">Save</button>
              </form>
            </div>
          </div>




        
    </div>
</div>

<script src="main.js"></script>
</body>
</html>
