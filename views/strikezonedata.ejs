<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThrowTrack</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">

</head>
<body>
<!-------------------------BUTTONS ROUTING TO OTHER PAGES------------------------------------------------------->
<div class="container">
    <div class="page-header text-center">
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/tracker" class="btn btn-default btn-sm">Back to Tracker</a>
        <a href="/pastsession" class="btn btn-default btn-sm">Back to Past Sessions</a>
        <a href="/strikezonedata" class="btn btn-default btn-sm">Zone Distribution</a>
    </div>
<!-------------------------STRIKEZONE DATA TABLE---------------------------------------------------------------->
    <div class="row">
        <h1>Strike Zone Data</h1>

        <!-- RESPONSIVE TABLE -->
        <div class="table-responsive small-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Session Name</th>
                       
                        <th>Zone Distribution</th>
                        
                    </tr>
                </thead>

        <!---DISPLAYS SESSION DATA--->  
                <tbody>
                    <% sessions.forEach(session => { %>
                        <tr>
                            <td><%= session.sessionName %></td>
                    
                            <td><%= JSON.stringify(session.strikezoneData) %></td>
                            
                            <td>
                                <i class="fa fa-trash-o delete-session" 
                                data-id="<%= session._id %>" 
                                data-sessionName="<%= session.sessionName %>"
                                data-strikezoneData="<%= session.strikezoneData %>"
                                aria-hidden="true" 
                                style="cursor: pointer; color: red;"></i>

                                <i class="fa fa-edit edit-session"
                                data-sessionId="<%= session._id %>" 
                                data-sessionName="<%= session.sessionName %>"
                                data-strikezoneData="<%= session.strikezoneData %>" 
                                aria-hidden="true" 
                                style="cursor: pointer; color: blue;"></i>
                            </td>

                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
      <div id="editModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <h2>Edit Session</h2>
              <form id="editForm">
                <input type="hidden" id="editSessionId">
                <label for="editSessionName">Session Name:</label>
                <input type="text" id="editSessionName" name="sessionName"><br>
                <label for="editstrikezoneData">Zone 1:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 2:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 3:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 4:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 5:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 6:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 7:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 8:</label>
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <label for="editstrikezoneData">Zone 9:</label>
    
                <input type="number" id="editstrikezoneData" name="strikezoneData"><br>
                <button type="submit">Save</button>
              </form>
            </div>
          </div>
              </form>
            </div>
          </div>
        
    </div>
</div>

<script src="main.js"></script>
</body>
</html>
